# Configuration de l'application VTC
APP_NAME="VTC Management System"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production

# Base de données PostgreSQL
DATABASE_URL=postgresql://vtc_user:your_password@localhost:5432/vtc_db

# Configuration JWT
JWT_SECRET_KEY=your_super_secret_jwt_key_here_32_chars_minimum
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# CORS Origins (séparés par des virgules)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Redis (optionnel pour le cache)
REDIS_URL=redis://localhost:6379/0

# Configuration SMTP pour les emails
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Configuration de sécurité
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT=3600
API_RATE_LIMIT=100

# Logging
LOG_LEVEL=INFO

# Monitoring et métriques
ENABLE_METRICS=true
METRICS_PORT=9090
