# VTC Application - Configuration de production
# Copiez ce fichier vers .env et modifiez les valeurs

# Database
DATABASE_URL=postgresql://vtc_user:VTC_SecurePass_2024!@postgres:5432/vtc_database
POSTGRES_DB=vtc_database
POSTGRES_USER=vtc_user
POSTGRES_PASSWORD=VTC_SecurePass_2024!

# Redis
REDIS_URL=redis://:RedisVTC2024!@redis:6379

# JWT
JWT_SECRET=VTC_JWT_Secret_Key_2024_Production

# Application
FLASK_ENV=production
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://api.vtc-app.com

# SSL (à configurer avec vos certificats)
SSL_CERT_PATH=/etc/nginx/ssl/vtc-app.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/vtc-app.com.key

# Email (à configurer avec votre fournisseur)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring (optionnel)
SENTRY_DSN=your-sentry-dsn
